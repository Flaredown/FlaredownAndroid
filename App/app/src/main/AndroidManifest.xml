<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flaredown.flaredownApp">

    <!-- Basic permissions should be obvious -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Checking internet connectivity -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permission to start Alarm on device reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".FlaredownApp">
        <activity android:name=".WebView.WebViewActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:launchMode="singleTop"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Checkin.CheckinActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".WebView.WebViewActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flaredown.flaredownApp.WebView.WebViewActivity" />
            <!-- Note when removing the web view update the meta-data on all activities.-->
        </activity>

        <activity
            android:name=".Login.LoginActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:screenOrientation="behind"/>

        <activity
            android:name=".Settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="behind"
            android:parentActivityName=".WebView.WebViewActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flaredown.flaredownApp.WebView.WebViewActivity" />
        </activity>

        <activity
            android:name=".Checkin.AddEditableActivity"
            android:label="@string/title_activity_add_adialog" />

        <receiver android:name=".Receivers.AlarmReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".Settings.PolicyWebView"
            android:label="@string/title_activity_policy_web_view"
            android:theme="@style/AppTheme"
            android:screenOrientation="behind">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Settings.SettingsActivity" />
        </activity>

        <activity
            android:name=".EditAccount.FragmentEditAccount"
            android:label="@string/title_activity_edit_account"
            android:parentActivityName=".Settings.SettingsActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Settings.SettingsActivity" />
        </activity>

        <service android:enabled="true" android:name=".Receivers.AlarmIntentService" />
    </application>

</manifest>
