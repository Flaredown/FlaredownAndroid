<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:progressBarStyle">@style/AppTheme.ProgressBar</item>
    </style>


    <style name="AppTheme.Box">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/background_box</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/box_background</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="AppTheme.NavigationDrawList">
        <item name="android:textViewStyle">@style/AppTheme.NavigationDrawList_TextView</item>
    </style>
    <style name="AppTheme.NavigationDrawList_TextView" parent="android:Widget.TextView">
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
